@{
    ViewBag.Title = "TRIO FAQ";
}
    <h2>@ViewBag.Title (@Html.ActionLink("Edit", "FAQEdit", "Home"))</h2>

<!-- Bootstrap FAQ - START -->
    <div class="container">
        <br />
        <div class="panel-group" id="accordion">
            @foreach (var item in Model)
            {
                var res = @item.QuestionIDWord;
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4 class="panel-title">
                            <a class="accordion-toggle collapsed" data-toggle="collapse" data-parent="#accordion" href='@string.Format("#collapse{0}", res)'>@item.QuestionValue</a>
                        </h4>
                    </div>
                    <div id='@string.Format("collapse{0}", res)' class="panel-collapse collapse">
                        <div class="panel-body">
                            <p>@item.AnswerValue</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
